<div  style="margin-left:10%;margin-top: 0px;" ><svg id="emailsvg"  style="margin-bottom: -4px;transition-duration:.3s;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
<input  type="text" name="lastName" style="margin-top: 0px;margin-left: 0%;" placeholder="Enter LastName"  required><label  style="color: red;font-size: 18px;margin-left: 24px;text-decoration-line: underline;"></label>
</div>
<br>

 <div  style="margin-left:10%;margin-top: 0px;" ><svg id="emailsvg"  style="margin-bottom: -4px;transition-duration:.3s;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-mail"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
<input  type="email" name="email" id="email" style="margin-top: 0px;margin-left: 0%;" placeholder="Enter Email ID"  required><label id="lbltxt" style="color: red;font-size: 18px;margin-left: 24px;text-decoration-line: underline;"></label>
</div>
<br>
<div style="margin-left:10%" ><svg id="pass" style="margin-bottom: -4px;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
<input name="password" id="password" type="password" style="margin-top: 0px;margin-left: 0%;" placeholder="Enter Password" minlength="6" required>
</div>
<br>

<div style="margin-left:10%" ><svg id="pass" style="margin-bottom: -4px;" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
<input name="confirm_password" id="password" type="password" style="margin-top: 0px;margin-left: 0%;" placeholder="Enter Password" minlength="6" required>
</div>
<br>
<label>
	<input style="margin-left: 10%;margin-top: 10px;height: 12px;width: 12px;"   type="checkbox" checked="checked" name="remember"><span style="font-size: 12px;"> By creating an account you agree to our</span><a href="#" style="font-size: 12px;text-decoration-line: underline;"> Terms & Privacy.</a>
